<resources>

    <!-- Base application theme. -->
    <style name="VendingTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/vt323</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.AppCompat.Medium.Vending" parent="VendingTheme">
        <item name="android:textSize">24dp</item>
    </style>

    <style name="ImageView.Vending" parent="VendingTheme">
        <item name="android:layout_margin">16dp</item>
    </style>

</resources>
